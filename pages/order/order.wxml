<view class="container">
  <view class="order-list">
    <block wx:for="{{orders}}" wx:key="id">
      <view class="order-item">
        <view class="order-header">
          <text class="order-number">订单号: {{item.orderNumber}}</text>
          <text class="order-status">{{getStatusText(item.status)}}</text>
        </view>
        <view class="order-body">
          <block wx:for="{{item.details}}" wx:key="id">
            <view class="order-dish">
              <text class="dish-name">{{item.dishName}} × {{item.quantity}}</text>
              <text class="dish-price">¥{{item.dishPrice * item.quantity}}</text>
            </view>
          </block>
        </view>
        <view class="order-footer">
          <text class="total-price">总计: ¥{{item.totalAmount}}</text>
          <text class="create-time">{{formatTime(item.createTime)}}</text>
        </view>
      </view>
    </block>
  </view>
</view>