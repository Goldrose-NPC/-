.container {
  padding: 20rpx;
}

.order-list {
  margin-bottom: 30rpx;
}

.order-item {
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
}

.order-dish {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.dish-name {
  font-size: 28rpx;
}

.dish-price {
  font-size: 28rpx;
  color: #f40;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
}

.total-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #f40;
}

.create-time {
  font-size: 26rpx;
  color: #999;
}