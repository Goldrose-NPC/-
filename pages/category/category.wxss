page {
  background-color: #f0f9eb;
  font-family: 'PingFang SC', sans-serif;
}
.container {
  padding: 20rpx;
}

.category-nav {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.nav-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 20rpx;
  border-radius: 35rpx;
  background: #f5f5f5;
  color: #666;
}

.nav-item.active {
  background: #07c160;
  color: white;
}

.dish-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.dish-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  position: relative;
}

.dish-item image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.dish-info {
  padding: 0 10rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dish-price {
  color: #f40;
  font-weight: bold;
}

.add-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #07c160;
  color: white;
  border-radius: 50%;
  font-size: 36rpx;
  padding: 0;
}