.container {
  padding: 40rpx;
}

.login-form {
  background: white;
  border-radius: 10rpx;
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  display: block;
}

.form-item input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 10rpx;
  margin-top: 60rpx;
}

.register-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 10rpx;
  margin-top: 30rpx;
}