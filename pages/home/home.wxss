/* 新增全局色调（绿色主题） */
:root {
  --primary-color: #07C160; /* 微信绿 */
  --secondary-color: #f5f5f5;
}

page {
  background-color: #f0f9eb;
  font-family: 'PingFang SC', sans-serif;
}

/* 搜索栏美化 */
.search-bar {
  background: white;
  border-radius: 20px;
  padding: 10px 15px;
  margin: 10px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* 推荐菜品横向滚动区 */
.recommend-scroll {
  white-space: nowrap;
  padding: 0 10px;
}

.recommend-item {
  display: inline-block;
  width: 150px;
  margin-right: 10px;
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* 菜品卡片 */
.dish-item {
  background: white;
  margin: 10px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* 图片样式 */
image {
  width: 100%;
  height: 100px;
  display: block;
}


/* 菜品信息容器 */
.dish-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 15rpx;
}

/* 文字区域 */
.dish-text {
  flex: 1;
}

/* 加号按钮新样式 */
.add-btn {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx; /* 增加与文字的间距 */
  line-height: 50rpx;
  padding: 0;
  border-radius: 50%;
  background: #07C160;
  color: white;
  font-size: 30rpx;
}

.dish-name {
  font-size: 14px;
  color: #333;
  display: block;
}

.dish-price {
  font-size: 14px;
  color: #07C160;
  font-weight: bold;
}
