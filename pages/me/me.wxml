<view class="container">
  <view class="user-info" wx:if="{{userInfo}}">
    <image class="avatar" src="{{userInfo.avatar || '/assets/images/default-avatar.png'}}" />
    <view class="info">
      <text class="name">{{userInfo.userName}}</text>
      <text class="phone">{{userInfo.userPhone || '未绑定手机号'}}</text>
    </view>
  </view>
  
  <button wx:else class="login-btn" bindtap="login">登录/注册</button>
  
  <view class="menu-list">
    <view class="menu-item" bindtap="viewOrders">
      <text>我的订单</text>
      <image src="/assets/icons/arrow-right.png" />
    </view>
    <view class="menu-item" bindtap="viewAddress">
      <text>收货地址</text>
      <image src="/assets/icons/arrow-right.png" />
    </view>
    <view class="menu-item" bindtap="viewSettings">
      <text>设置</text>
      <image src="/assets/icons/arrow-right.png" />
    </view>
  </view>
</view>